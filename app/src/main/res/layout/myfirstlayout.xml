<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layoutAnimation="@anim/anim_listview_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/IVfir1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/IVfir2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/IVfir3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/IVfir4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/IVfir5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/IVfir6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/IVfir7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/IVfir8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/IVfir9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/IVfir10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:scaleType="fitXY"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
